<% include ./partials/header.ejs %>
    <div class="w-fullmin-h-screenbg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Add a new post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input class="text-black block w-1/3 px-3 py-2 mt-2" type="file" name="file" >
            <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class=" text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="fileCaption"></textarea>
            <input class="text-black block w-1/3 px-3 py-2 mt-2 rounded-md bg-red-700" type="submit" value="Create Post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>