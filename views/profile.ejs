<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1 px-4">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>
  <div class="profdets flex flex-col items-center mt-10">
    <div class="relative">
      <span id="uploadicon" class="w-7 h-7 absolute bottom-0 right-0 rounded-full bg-red-800 flex items-center justify-center">
        <i class="ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img class="w-full h-full rounded-full" src="/images/uploads/<%= user.profileimage %>" alt="" />
      </div>
    </div> 
    <h1 class="text-2xl font-semibold capitalize mt-3">
      <%= user.fullname %>
    </h1>
    <h3 class="text-sm">
      <%= user.username %>
    </h3>
    <a href="/edit" class="mt-3 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
    <a href="/add" class="bg-red-700 px-8 py-2 rounded-full mt-3">Add New Post</a>
  </div>

  <% if(user.posts.length > 0) { %>
    <div class="cards flex flex-wrap mt-7 px-10 gap-10">
      <div class="card">
        <div class="w-52 h-32 bg-zinc-500 rounded-lg overflow-hidden ">
          <img src=" /images/uploads/<%=user.posts[0].image%>" alt="" class="w-full h-full object-cover bg-zinc-400">
        </div>
        <a href="/show/posts " class="inline-block text-l font-semibold mt-3"> Your uploaded posts</a> 
        <h5 class="text-xs  font-medium opacity-60"><%= user.posts.length%> </h5>
      </div>
    </div>
    <% } else { %>
      
    <% } %>
</div>

<script>
  document.querySelector('#uploadicon').addEventListener('click', () => {
    document.querySelector('#uploadform input').click();
  })
  document.querySelector('#uploadform input').addEventListener('change', () => {
    document.querySelector('#uploadform').submit();
  })
</script>
<% include ./partials/footer.ejs %>
